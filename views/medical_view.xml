             <field name="htn"/>

              <field name="cardiac"/>
              <field name="heptic"/>
              <field name="renal"/>
              <field name="others"/>

              <field name="surgical_history"/>
              <field name="bp"/>
              <field name="rr"/>
              <field name="hr"/>
              <field name="temp"/>
              <field name="fhc"/>
              <field name="weight"/>
              <field name="obese"/>
              <field name="average_weight"/>
              <field name="under_weight"/>
              <field name="examination"/>
              <field name="drug_allergy"/>
              <field name="time"/>

        </tree>
      </field>
    </record>

