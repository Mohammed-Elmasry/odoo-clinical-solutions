  <data>
    <!-- explicit list view definition -->

<!-- explicit form view definition -->
    <record model="ir.ui.view" id="odoo_clinic_management_form_view_patient">
      <field name="name">odoo_clinic_management_form</field>
      <field name="model">odoo.clinic.patient</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
              <button name="toggle_active" position="before">
                  <button class="oe_state_button" type="action" string="Visit List" name="%(action_visit_view_list_in_patient)d" icon="fa-list">
                  </button>
              </button>
            <group>
                <field name="active"/>

            </group>


            <group  string="Personal info" col="4">
                <field name="image"/>

                <!--              <field name="id"/>-->
              <field name="name"/>
<!--              <field name="set_id"/>-->
              <field name="phone"/>
              <field name="mobile"/>
                <field name="email"/>
              <field name="date"/>
                <field name="religion"/>
                <field name="lang"/>
<!--                <field name="state"/>-->
                <field name="token"/>

              <field name="gender"/>
            </group>
                <notebook string="Visit Data and Information">
            <page string="Medical Info">
              <group>

              <field name="mrn"/>
              <field name="height"/>
              <field name="weight"/>
              <field name="blood_group"/>
                  <field name="comment"/>

            </group>
            </page>
                    <page  string="Address">
          <group string="address">
              <field name="street"/>
              <field name="street2"/>
              <field name="country_id"/>
          </group>
                        <group col="9">

                  <field name="city"/>
              <field name="state_id"/>
              <field name="zip"/>

              </group>
              </page>
                      <page string="Bith Info">
                        <group>
              <field name="birth_place"/>

              <field name="birth_order"/>

              <field name="multiple_birth_indicator"/>
                        </group>
                    </page>

                    <page string="Visit Info">
                        <group>
                                <field name="visit"/>

                        </group>
                    </page>
                                        <page string="Medical Sheet">
                        <group>
                                <field name="medical"/>

                        </group>
                    </page>

                <page string="Death Info">
                   <group string="death info">
                  <field name="patient_death"/>

              <field name="patient_death_indicator"/>
              </group>
                </page>
                    <page string="Others">
                        <group>
                            <field name="MaritalStatus"/>
                            <field name="race"/>
                            <field name="function"/>
                            <field name="mother_name"/>
                            <field name="patient_account_number"/>
                            <field name="company_name"/>
                            <field name="company_type"/>
                            <field name="child_ids"/>
                            <field name="bank_account_count"/>
                            <field name="bank_ids"/>

                        </group>
                    </page>
                </notebook>

          </sheet>
        </form>
      </field>
    </record>


