            <tree string="Info List">
                        <field name="user_id"/>


                                <field name="id"></field>

                <field name="name"></field>
                <field name="role"></field>
                <field name="job_title"></field>
                <field name="speciality"/>
                <field name="mobile_phone"/>
            </tree>
        </field>
    </record>
