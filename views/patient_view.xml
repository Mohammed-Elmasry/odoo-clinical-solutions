<!-- explicit form view definition -->
    <record model="ir.ui.view" id="odoo_clinic_management_form_view_patient">
      <field name="name">odoo_clinic_management_form</field>
      <field name="model">odoo.clinic.patient</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group  string="Personal info" col="4">
              <field name="id"/>
              <field name="name"/>
              <field name="set_id"/>

              <field name="phone"/>
              <field name="mobile"/>
              <field name="date"/>
                <field name="religion"/>
<!--              <field name="sex"/>-->
              <field name="email"/>
              <field name="lang"/>

              <field name="mrn"/>
              <field name="height"/>
              <field name="weight"/>
              <field name="blood_group"/>
            </group>
          <group string="address">
              <field name="street"/>
              <field name="street2"/>
              <field name="city"/>
              <field name="zip"/>
              <field name="country_id"/>

          </group>
              <group string="company info">

              <field name="child_ids"/>
              <field name="company_name"/>
              <field name="company_type"/>
                  <field name="mother_name"/>
              </group>
              <group >
              <field name="create_date"/>

              <field name="create_uid"/>
              <field name="function"/>
              <field name="patient_account_number"/>

            </group>
              <group>
              <field name="birth_place"/>

              <field name="birth_order"/>

              <field name="multiple_birth_indicator"/>
              </group>
              <group string="death info">
                  <field name="patient_death"/>

              <field name="patient_death_indicator"/>
              </group>
              <group>
                                <field name="image"/>
                                <field name="visit"/>


              </group>

          </sheet>
        </form>
      </field>
    </record>


