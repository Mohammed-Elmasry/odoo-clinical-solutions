<!--        pivot for visits model-->
         <record model="ir.ui.view" id="view_doctor_info_pivot">
             <field name="name">Visits Data and Information </field>
             <field name="model">odoo.clinic.visit</field>
             <field name="arch" type="xml">
            <pivot string="Visit Data and Information">
               <field name="set_id" type="row"/>
                <field name="visit_number" type="col"/>
                 <field name="admitting_doctor" type="col"/>
            </pivot>
        </field>
    </record>
        <!--        create search view-->
         <record model="ir.ui.view" id="view_doctor_info_search">
        <field name="name">Visits Search</field>
        <field name="model">odoo.clinic.visit</field>
        <field name="arch" type="xml">
            <search>
                 <field name="patient_class"/>
                 <field name="patient_type"/>
                 <field name="set_id"/>
                 <field name="admitting_doctor"/>
            </search>
        </field>
    </record>
        <!-- actions opening views on models -->

        <record model="ir.actions.act_window" id="visit_action_window">
            <field name="name">visit</field>
            <field name="res_model">odoo.clinic.visit</field>
            <field name="view_mode">tree,form,graph,pivot</field>
        </record>


        <!-- Top menu item -->

        <!--    <menuitem name="clinic" id="lab1_menu_root"/>-->

        <!-- menu categories -->
        <menuitem name="visits" id="menu_visit" parent="menu_root"/>


        <!-- actions -->
         <menuitem name="List visit" id="list_visit" parent="menu_visit"
                  action="visit_action_window"/>







