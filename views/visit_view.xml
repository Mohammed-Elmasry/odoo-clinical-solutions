<odoo>
    <data>
        <!-- explicit list view definition -->

        <!-- explicit form view definition -->
        <record model="ir.ui.view" id="view_clinic_management_form_visit">
            <field name="name">Visit Form </field>
            <field name="model">odoo.clinic.visit</field>
            <field name="arch" type="xml">

            </field>
        </record>


        <!-- explicit list view definition -->
        <record model="ir.ui.view" id="view_clinic_management_list_visit">
            <field name="name">Visits List</field>
            <field name="model">odoo.clinic.visit</field>
            <field name="arch" type="xml">
                <tree>
                      <field name="set_id"/>
                      <field name="visit_number"/>
                     <field name="account_status"/>
                     <field name="admitting_doctor"/>
                    <field name="total_payments"/>
                </tree>
            </field>
        </record>

        <!--        graph view-->
        <record model="ir.ui.view" id="view_clinic_management_graph_visit">
             <field name="name">Visits Graph</field>
            <field name="model">odoo.clinic.visit</field>
            <field name="arch" type="xml">
                <graph string="Visit Data and Information" >
                    <field name="set_id"/>
                      <field name="visit_number"/>
                     <field name="account_status"/>
                     <field name="admitting_doctor"  type="col"/>
                </graph>
            </field>
        </record>
